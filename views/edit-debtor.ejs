<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (debtor) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="last-borrowed">Amount Borrowed</label>
                    <input type="text" class="form-control" name="amount_borrowed" id="amount_borrowed" value="<%= debtor.amount_borrowed %>" required>
                </div>

            </div>
            <button type="submit" class="btn btn-success float-right">Update Debtor</button>
        </form>
    <% } else { %>
        <p class="text-center">Debtor Not Found. Go <a href="/add">here</a> to add debtors.</p>
    <% } %>
</div>
</div>
</body>
</html>
